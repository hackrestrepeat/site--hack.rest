##
# Gemfile
#
# This is the base Gemfile for Ronin.
##

# Source
source 'https://rubygems.org'

# Middleman Core | Static site generator
gem "middleman-core", "3.3.12"

# Middleman Blog | Blog engine for Middleman
gem "middleman-blog", "3.5.3"

# Middleman Pagination | General purpose pagination support for Middleman
gem "middleman-pagination", "1.2.0"

# Middleman Livereload | Auto-refresh on change
gem "middleman-livereload", "3.4.3"

# Middleman S3 Sync | Allows sync between middleman build and Amazon S3
gem "middleman-s3_sync", "3.0.47"

# Middleman Sprockets | Sprockets support for Middleman
gem "middleman-sprockets", "3.4.2"

# Sass | Sass compilation 
gem "sass", "3.4.18"

# Uglify | Javascript Minification
gem "uglifier", "2.7.1"

# Builder | Builds structured XML markup
gem "builder", "3.2.2"

# Kramdown | Markdown parser
gem "kramdown", "1.8.0"
